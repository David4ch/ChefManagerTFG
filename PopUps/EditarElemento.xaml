            HeightRequest="80"
            HorizontalTextAlignment="Center"
            Text=""
            TextColor="White"
            VerticalTextAlignment="Center" />

        <Label
            x:Name="label1"
            Margin="20,20,0,0"
            FontSize="15"
            Text=""
            TextColor="{StaticResource darkBlue}" />
        <Entry
            x:Name="entry1"
            Margin="20,5,0,10"
            BackgroundColor="{StaticResource darkBlue}"
            HorizontalOptions="Start"
            Text=""
            WidthRequest="300" />

