                                            x:Name="labelId2"
                                            Grid.Column="0"
                                            Text="{Binding Restaurante_Id}"
                                            TextColor="Black" />
                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding NombreUser}"
                                            TextColor="Black" />
                                        <Label
                                            Grid.Column="2"
                                            Text="{Binding Email}"
                                            TextColor="Black" />

                                        <HorizontalStackLayout Grid.Column="3" Spacing="10">
                                            <ImageButton
                                                BackgroundColor="LightGray"
                                                Clicked="ImageEdit_Clicked"
                                                HeightRequest="16"
